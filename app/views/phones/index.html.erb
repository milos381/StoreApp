<div class = "phones">
<div id = "complete_selection_of_phones">
<%= "This is our complete selection:"%><br><br>
<% @phones.each do |phone| %>
    <tr>
      <td><%= phone.make %></td>
        <% phone.models.each do |model|%>
            <%=model.name_model%>
            <%=model.price%>
        <%end%><br>
      <td><%= link_to "  -continue-  ", phone_models_path(phone) %></td><br><br>
    </tr>
    <% end %><br><br>
    </div>
    <div id = "iphone_phones">
  <%= "This is our selection of Iphone models:"%><br><br>
  <% @phones.iphone.each do |phone| %>
    <tr>
      <td><%= phone.make %></td>
        <td><% phone.models.each do |model|%></td>
            <%=model.name_model%>
            <%=model.price%>
        <%end%><br>
        <td><%= link_to "  -continue-  ", phone_models_path(phone) %></td><br><br>
      </tr>
    <% end %>
</div><br><br>
<% if @user.store_owner %>
  <br><%= link_to 'ADD NEW PHONE', new_phone_path %><br><br>
  <%= link_to "BACK", user_path(@user) %>
<% else %>
 
  <%= link_to "BACK", user_path(@user) %>
<% end %>
</div>
