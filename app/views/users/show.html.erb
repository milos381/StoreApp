<div id = "flash_show_user">
    <% if flash[:message] %>
        <p><%= flash[:message] %></p>
    <% end %>
</div>
<div class = "root">
    <p><strong><%="OWNER" if @user.store_owner %></strong></p>
    <%if !@user.store_owner && session[:user_id]%>
    <p><strong>Name: </strong><%= @user.name %></p>
    <p><strong>Amount of money available: </strong><%= @user.money %></p>
    
    <%= link_to 'Unexpectedly received more money? Click here:', edit_user_path(@user) %><br>
    <%end%>
    <br><br>

    <%= link_to 'See all available phones', phones_path %><br><br>
    <%= link_to "Log Out", logout_path, method: :delete %>
</div>